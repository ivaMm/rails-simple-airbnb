<div class="container" style="padding-top: 10vh; z-index: 1;">
  <div class="row justify-content-sm-center">
    <% if @flats.empty? %>
      <h6 style="margin-top: 32px;">Sorry, there is nothing that matches: <span style="color: red;"><%= @query.upcase %></span> ! Please try another city.</h6>
    <% else %>
      <% if @query %>
        <div class="container">
          <div class="row justify-content-sm-center">
            <h6 style="margin-top: 32px;">Here are results for your search: <span style="color: red;"><%= @query.upcase %></span></h6>
          </div>
        </div>
      <% end %>
      <% @flats.each do |flat| %>
        <div class="card" style="width: 20%; height: 60%; margin: 32px 24px;">
          <img class="card-img-top" src="<%= flat.picture_url %>" style="height: 56%;" >
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.address %></p>
            <p>🧑‍🤝‍🧑 <%= flat.number_of_guests %><strong> €</strong> <%= flat.price_per_night %></p>
            <p>
            <%= link_to "More info", flat_path(flat), class: "btn btn-outline-primary" %>
            <%= link_to "Edit", edit_flat_path(flat), class: "btn btn-outline-success" %>
            <%= link_to "Delete", flat_path(flat), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?" } %>
            </p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
